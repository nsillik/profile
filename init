load_conf() {
  for CONF in "$1/"*.conf; do
    source "${CONF}"
  done
}

PROFILE_PATH="${HOME}/.profile.d"
PLATFORM_PATH="${PROFILE_PATH}/`uname`"

load_conf "${PROFILE_PATH}"
[ -e "${PLATFORM_PATH}" ] && load_conf "${PLATFORM_PATH}"

